<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="2dp">
    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选自 开发分享"
            android:id="@+id/newsRresource"
            android:layout_alignBottom="@+id/ic_item_comment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
<TextView
    android:layout_width="320dp"
    android:layout_height="60dp"
    android:id="@+id/newsText"
    android:textSize="15dp"
    android:textColor="#000000"
    android:text="这是测试的文字123123123123123123123123"
    style="@style/Base.TextAppearance.AppCompat.Body2"
    android:maxLines="2"
    android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/newsImage"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_item_comment"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/newsText"
            android:layout_alignStart="@+id/newsText"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:id="@+id/ic_item_comment" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_item_like"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/newsText"
            android:layout_alignStart="@+id/newsText"
            android:id="@+id/ic_item_like" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666"
            android:textSize="15sp"
            android:id="@+id/ic_item_like_number"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ic_item_like"
            android:layout_toEndOf="@+id/ic_item_like" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666"
            android:textSize="15sp"
            android:id="@+id/ic_item_comment_number"
            android:layout_below="@+id/newsText"
            android:layout_toRightOf="@+id/ic_item_comment"
            android:layout_toEndOf="@+id/ic_item_comment" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
