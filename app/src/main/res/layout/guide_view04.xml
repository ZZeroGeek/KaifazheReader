<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf4e9a2"
    >
    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="@drawable/tutorial_4"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">
    </RelativeLayout>

    <Button
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="开启我的头条"
        android:background="@drawable/shape_and_color_of_button2"
        android:textSize="15sp"
        android:id="@+id/startButton"
        android:textColor="@drawable/button_font"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="查看IO币规则"
        android:textColor="#2fcddf"
        android:id="@+id/textView4"
        android:textSize="12sp"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        />


</RelativeLayout>